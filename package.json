{
  "name": "codeberg-fonts",
  "description": "A font hosting site for Codeberg",
  "private": true,
  "scripts": {
    "build": "rm -rf _site/ && npm run build-fonts && eleventy",
    "deploy": "./deploy.sh",
    "serve": "npm run build-fonts && eleventy --serve",
    "build-fonts": "node build-fonts.js"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "js-yaml": "^3.14.0"
  }
}
